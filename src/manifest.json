{
    "name": "Flowtention",
    "description" : "Increase the quality of your workflow by removing distractions",
    "version": "0.0.1",
    "manifest_version": 2,
    "icons": {
        "128": "./assets/icon/icon_128x128.png",
        "48": "./assets/icon/icon_48x48.png",
        "32": "./assets/icon/icon_32x32.png"
    },
    "background": {
        "scripts": ["background.min.js"],
        "persistent": false
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "options_page": "./options.html"
}